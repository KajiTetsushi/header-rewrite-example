{
  "name": "staticify-test",
  "version": "0.0.1",
  "description": "Testing staticify with TypeScript",
  "main": "dist/index.js",
  "repository": "https://github.com/andrewsantarin/staticify-test.git",
  "author": "Cezar Andrew Villegas Santarin <andrew.santarin@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@andrewsantarin/staticify": "^3.3.6",
    "@types/express": "^4.17.2",
    "axios": "^0.19.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "pug": "^2.0.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@types/send": "^0.14.5",
    "@types/shelljs": "^0.8.6",
    "concurrently": "^5.0.0",
    "nodemon": "^2.0.1",
    "open": "^7.0.0",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.0",
    "sass": "^1.23.7",
    "shelljs": "^0.8.3",
    "ts-node": "^8.5.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build-server": "tsc",
    "watch-server": "ts-node-dev --inspect --project tsconfig.json -- src/index.ts",
    "build-client": "parcel build src/client/client.tsx src/client/client.scss -d dist/public/client --public-url /static/client/",
    "watch-client": "parcel watch src/client/client.tsx src/client/client.scss -d dist/public/client --public-url /static/client/",
    "build-public": "ts-node scripts/build-public",
    "watch-public": "nodemon --watch src/public -e jpg,png,ico,js,pug --exec yarn build-public",
    "clean": "rimraf dist .cache",
    "build": "yarn build-server && yarn build-client && yarn build-public",
    "watch": "cross-env NODE_ENV=development yarn clean && concurrently --kill-others --prefix \"[{name}]\" --names \"Client,Public,Server\" --prefix-colors \"blue,green,cyan\" \"yarn watch-client\" \"yarn watch-public\" \"yarn watch-server\"",
    "start": "cross-env NODE_ENV=production node ."
  }
}
