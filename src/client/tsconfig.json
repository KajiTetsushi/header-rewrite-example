{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../../dist/public/js",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "paths": {
      "~*": [
        "./*"
      ]
    }
  },
  "include": [
    "../../types/**/*",
    "./**/*",
    "scripts.tsx"
  ]
}
